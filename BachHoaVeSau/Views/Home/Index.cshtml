
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<SANPHAM>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- SLIDE SHOW -->
<div id="carouselExampleIndicators" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="3"
                aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="4"
                aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="5"
                aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="6"
                aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Content/Image/Khuyenmai/khuyemai3.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Image/Khuyenmai/khuyenmai1.png" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Image/Khuyenmai/Khuyenmai2.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Image/Khuyenmai/frisoKM.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Image/Khuyenmai/combo-2-chai-nuoc-ngot-KM.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Image/Khuyenmai/KM-giamgia.jpg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <img src="~/Content/Image/Khuyenmai/khuyenmai5.jpg" class="d-block w-100" alt="...">
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators"
            data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<div class="row">
    <!-- MENU SẢN PHẨM -->
    @Html.Action("LoaiPartial", "Home")

    <!-- SẢN PHẨM -->
    <div class="col-md-8">
        <!-- SẢN PHẨM NỔI BẬT -->
        <h5 class="mt-2">Sản phẩm nổi bật</h5>
        <div class="row hot-product">
            <div class="card col">
                <img src="~/Content/Image/headerimg/haohao.jpg" class="card-img-top" alt="...">
                <div class="card-body group-product">
                    <p class="card-text text-center text-info">Mì gói các loại</p>
                </div>
            </div>
            <div class="card col">
                <img src="~/Content/Image/headerimg/bi-do.jpg" class="card-img-top" alt="...">
                <div class="card-body group-product">
                    <p class="card-text text-center text-info ">Rau, củ các loại</p>
                </div>
            </div>
            <div class="card col">
                <img src="~/Content/Image/headerimg/suatuoi.jpg" class="card-img-top" alt="...">
                <div class="card-body group-product">
                    <p class="card-text text-center text-info">Sữa tươi các loại</p>
                </div>
            </div>
            <div class="card col">
                <img src="~/Content/Image/headerimg/nuocngot.jpg" class="card-img-top" alt="...">
                <div class="card-body group-product">
                    <p class="card-text text-center text-info">Nước uống các loại</p>
                </div>
            </div>
            <div class="card col">
                <img src="~/Content/Image/headerimg/nuoc-rua-tay.jpg" class="card-img-top" alt="...">
                <div class="card-body group-product">
                    <p class="card-text text-center text-info">Nước rửa tay</p>
                </div>
            </div>
            <div class="card col">
                <img src="~/Content/Image/headerimg/gao.jpg" class="card-img-top" alt="...">
                <div class="card-body group-product">
                    <p class="card-text text-center text-info">Gạo các loại</p>
                </div>
            </div>
        </div>
        <!-- DEAL -->
        <div class="row">
            <div class="col-sm-6  d-grid  mx-auto mb-3">
                <img src="~/Content/Image/Khuyenmai/Deal-soc-desk.png" width="100%" alt="">
            </div>
        </div>
        <!-- CÁC Ô SẢN PHẨM -->
        <div class="row">
            @foreach (var item in Model)
            {
                
                    <div class="col-4">
                        <a href="">
                            <div class="card">

                                <a href="/Home/ChiTietSp/?id=@item.MASP">
                                    <img src="@Url.Content("/Content/" + @item.HINHANH)" class="card-img-top" alt="" />

                                    <div class="card-body">
                                        <h5 class="card-title">@item.TENSP</h5>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item text-danger">
                                            @item.DONGIA VND
                                            <span class="badge bg-danger rounded-pill">-33%</span>
                                        </li>
                                        <li class="list-group-item">
                                            <div class="rate">
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star"></i>
                                                <i class="fas fa-star-half-alt"></i>
                                                (4,6/5)
                                            </div>
                                        </li>
                                    </ul>
                                    <div class="card-body text-center">
                                        <a href="#" class="card-link">
                                            <button class="btn btn-outline-success" id=""
                                                    onclick="addCard(id);">
                                                Thêm vào giỏ
                                                hàng
                                            </button>
                                        </a>
                                    </div>
                            </div>
                        </a>
                    </div>
                
            }

        </div>



        <!-- NEXT PAGE PRODUCT -->
        <div class="pagination justify-content-center d-flex flex-column justify-content-center text-center">

            <a aria-label="Trang hiện tại">
                <span aria-hidden="true">
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/@Model.PageCount
                </span>
            </a>


            <div class="d-flex justify-content-center p-2">

                @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), PagedListRenderOptions.OnlyShowFivePagesAtATime)
            </div>


        </div>
    </div>
    <!-- NEWS -->
    @{
        Html.RenderPartial("_NewsPartial");
    }
</div>

